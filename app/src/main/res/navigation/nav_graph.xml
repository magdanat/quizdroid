<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@+id/listFragment">

    <fragment
            android:id="@+id/listFragment"
            android:name="edu.washington.magdanat.quizdroid.ListFragment"
            android:label="fragment_list"
            tools:layout="@layout/fragment_list">
        <action
                android:id="@+id/action_listFragment_to_detailFragment"
                app:destination="@id/detailFragment"/>
    </fragment>
    <fragment
            android:id="@+id/detailFragment"
            android:name="edu.washington.magdanat.quizdroid.DetailFragment"
            android:label="fragment_detail"
            tools:layout="@layout/fragment_detail">
        <action android:id="@+id/action_detailFragment_to_question" app:destination="@+id/questionFragment"/>
    </fragment>
    <fragment android:id="@+id/questionFragment" android:name="edu.washington.magdanat.quizdroid.QuestionsFragment"
              android:label="fragment_question">
        <action android:id="@+id/action_questionFragment_to_summaryFragment" app:destination="@id/summaryFragment"/>
    </fragment>
    <fragment android:id="@+id/summaryFragment" android:name="edu.washington.magdanat.quizdroid.summaryFragment"
              android:label="fragment_summary" tools:layout="@layout/fragment_summary">
        <action android:id="@+id/action_summaryFragment_to_questionFragment" app:destination="@id/questionFragment"/>
    </fragment>
</navigation>